@using static VehicleShowroom.Common.EntityValidationConstants

@model  IEnumerable<ApplicationUserFavoriteList>


@{
    ViewData["Title"] = "Favorite";
}
<div class="d-flex justify-content-between align-items-center mb-3" style="margin-top: 20px;">
    <h1>All vehicle in your favorite list vehicle</h1>
</div>

<div class="container">
    <div class="row">
        @foreach (var vehicle in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card" style="width: 18rem;">
                    <img src="@vehicle.ImageUrl" alt="Car image" class="img-thumbnail mt-2" style="width: auto;" />

                    <div class="card-body">
                        <h5 class="card-title">@vehicle.Make @vehicle.Model</h5>
                        <p class="card-text">
                            <strong>Type:</strong> @vehicle.VehicleType<br />
                            <strong>Year:</strong> @vehicle.Year<br />
                            <strong>Price:</strong> @vehicle.Price.ToString("C")<br />
                            <strong>Color:</strong> @vehicle.Color<br />
                            <strong>Fuel Type:</strong> @vehicle.FuelType<br />
                        </p>
                    </div>   
                    <div>
                        <a asp-action=""RemoveFromFavorite" asp-route-vehicleid ="@vehicle.VehicleId" class="btn btn-danger">Remove</a>
                    </div>
                </div>
            </div>
        }
    </div>

</div>
