@using Microsoft.AspNetCore.Identity
@using VehicleShowroom.Data.Models
@inject SignInManager<ApplicationUser> SingInManager
@inject UserManager<ApplicationUser> UserManager
@model MotorcycleDeleteViewModel
@{
    ViewData["Title"] = "Vehicle Delete";
}

@if (User.IsInRole("Admin"))
{    
<div class="container mt-5">
    <div class="text-center">
        <h1 class="text-danger">Delete Vehicle</h1>
        <p class="lead">Are you sure you want to delete this vehicle?</p>
    </div>

    <div class="row justify-content-center mt-4">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h4 class="card-title">Vehicle Details</h4>
                    <div class="mb-3">
                        <p><strong>Vehicle Type:</strong> @Model.VehicleType</p>
                        <p><strong>Make:</strong> @Model.Make</p>
                        <p><strong>Model:</strong> @Model.Model</p>
                        <p><strong>Year:</strong> @Model.Year</p>
                        <p><strong>Price:</strong> @Model.Price</p>
                        <p><strong>Color:</strong> @Model.Color</p>
                        <p><strong>Fuel Type:</strong> @Model.FuelType</p>
                    </div>
                    <div class="text-center">
                        <img src="@Model.ImageUrl" alt="Vehicle Image" class="img-fluid rounded shadow-sm" style="max-width: 300px;" />
                    </div>
                </div>
            </div>
        </div>
    </div>

    @if (Model?.MotorcycleId != null)
    {
        <div class="row justify-content-center mt-4">
            <div class="col-md-8">
                <div class="card shadow-sm">
                    <div class="card-body">
                        <h4 class="card-title">Motorcycle Details</h4>
                        <div class="mb-3">
                            <p><strong>Kilometers:</strong> @Model.Kw</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }

    <div class="row justify-content-center mt-4">
        <div class="col-md-8 text-center">
            <form asp-action="ConfirmedDelete" method="post">
                <input type="hidden" name="id" value="@Model.VehicleId" />
                <button type="submit" class="btn btn-danger me-3">Delete</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>
}