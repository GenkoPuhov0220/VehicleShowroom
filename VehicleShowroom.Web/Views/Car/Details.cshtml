
@model CarDetailsViewModel

@{
    ViewData["Title"] = "Vehicle Details";
}
<div class="row g-0 bg-body-secondary position-relative">
    <div class="col-md-6 mb-md-0 p-md-4">
        <img src="@Model.ImageUrl" alt="Car image" class="card-img-top" style="width: 600px;" />
    </div>
    <div class="col-md-6 p-4 ps-md-0">
        <h5 class="mt-0">Vehicle Details</h5>
        <p>
            <strong>Vehicle Type: </strong>@Model.VehicleType<br>
            <strong>Make: </strong>@Model.Make<br>
            <strong>Model: </strong>@Model.Model<br>
            <strong>Year: </strong>@Model.Year<br>
            <strong>Price: </strong>@Model.Price<br>
            <strong>Color: </strong>@Model.Color<br>
            <strong>Fuel Type: </strong>@Model.FuelType<br>
        </p>
        <h6>Car Details</h6>
        <p>
            <strong>Kilometers: </strong>@Model.Kilometers.ToString()<br>
            <strong>Number of Doors: </strong>@Model.NumberOfDoors.ToString()<br>
            <strong>Transmission: </strong>@Model.CarTransmission.ToString()<br>
            <strong>HorsePower: </strong>@Model.CarHorsePower.ToString()<br>
            <strong>Description: </strong>@Model.CarDescription.ToString()
        </p>
        <div>
            <a asp-action="Index" class="btn btn-primary me-2">Back</a>
            <form asp-controller="FavoritesVehicle" asp-action ="AddToFavorite" method="post" class ="d-inline">
                <input type ="hidden" name="vehicleId" value="@Model.VehicleId" />
                <button type = "submit" class="btn btn-warning">AddToFavorite</button>
            </form>
        </div>
    </div>
</div>
